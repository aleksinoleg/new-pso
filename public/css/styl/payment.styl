.payment
	width 100%
	max-width 870px
	background #EAF5FB
	height auto
	min-height 500px
	margin 40px auto
.success
	& .l1
		font-size 70px
		font-weight bold
		text-align center
		color #5B9741
		font-family "Century Gothic Regular Bold"
		margin 10px 0
	& .l2
		text-align center
	& .l3
		text-align center
		font-size 34px
		color #5B9741
		font-weight bold
		font-family "Century Gothic Regular Bold"
		margin 10px 0
	& .l4
		text-align center
		font-size 26px
		line-height 2
.failed
	text-align center
	& .l1
		margin 30px 0 15px 0
	& .l2
		font-size 50px
		font-family "Century Gothic Regular Bold"
		color #333335
	& .l3
		font-size 24px
		color #333335
		margin 10px 0 20px 0
	& .l4
		font-size 24px
		color #333335
		margin 0 0 20px 0